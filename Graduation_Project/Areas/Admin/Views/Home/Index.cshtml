@model DashboardPageVM

@{
    ViewData["Title"] = "Home";
    // Users
    string registrationsAverage = string.Format("{0:0.##}", Model.RegistrationsRequests!.Average);
    string doctorAverage = string.Format("{0:0.##}", Model.RegistrationsRequests!.DoctorAverage);
    string patientAverage = string.Format("{0:0.##}", Model.RegistrationsRequests!.PatientAverage);
    
    // Advices
    string advicesAverage = string.Format("{0:0.##}", Model.AdvicesRequests!.Average);


}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<div class="content cards">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.AllUsers</h3>

                        <p>All Users</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a asp-controller="User" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.BlockedUsers</h3>

                        <p>Blocked Users</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <a asp-controller="User" asp-action="BlockedUsers" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Advices</h3>

                        <p>Advices</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-medical-alt"></i>
                    </div>
                    <a asp-controller="Advice" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Diseases</h3>

                        <p>Diseases</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-disease"></i>
                    </div>
                    <a asp-controller="Disease" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-olive">
                    <div class="inner">
                        <h3>@Model.TypeOfDiseases</h3>

                        <p>Type Of Diseases</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-stethoscope"></i>
                    </div>
                    <a asp-controller="Disease" asp-action="DiseaseType" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-secondary">
                    <div class="inner">
                        <h3>@Model.Specializations</h3>

                        <p>Specializations</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-notes-medical"></i>
                    </div>
                    <a asp-controller="Specialization" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@Model.LungTransplants</h3>

                        <p>Lung Transplants</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-lungs"></i>
                    </div>
                    <a asp-controller="LungTransplant" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box" style="background-color: #FF7F50; color: white;">
                    <div class="inner">
                        <h3>@Model.Contacts</h3>

                        <p>Contacts</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <a asp-controller="Contact" asp-action="Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>

        <div class="row">
            <div class="col-xl-4 col-md-6 xl-50">
                <div class="card order-graph sales-carousel">
                    <div class="card-header">
                        <h6>Registrations Last Week</h6>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-7">
                                <div class="small-chartjs">
                                    <div class="flot-chart-placeholder" id="simple-line-chart-sparkline-1"></div>
                                </div>
                            </div>
                            <div class="col-5 text-right">
                                <div class="value-graph">
                                    <h4>@registrationsAverage% <span><i class="fa fa-angle-up font-primary"></i></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media">
                            <div class="media-body">
                                <span>Total Registrations</span>
                                <h2 class="mb-0">@Model.RegistrationsRequests.TotalRegistrations</h2>
                                <p>
                                    <span><i class="fas fa-user"></i></span> @patientAverage%
                                    <span class="ml-3"><i class="fas fa-user-md"></i></span> @doctorAverage%
                                </p> 
                            </div>
                            <div class="small-box">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 xl-50">
                <div class="card order-graph sales-carousel">
                    <div class="card-header">
                        <h6>Advices Last Week</h6>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-7">
                                <div class="small-chartjs">
                                    <div class="flot-chart-placeholder" id="simple-line-chart-sparkline-2"></div>
                                </div>
                            </div>
                            <div class="col-5 text-right">
                                <div class="value-graph">
                                    <h4>@advicesAverage% <span><i class="fa fa-angle-up font-primary"></i></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media">
                            <div class="media-body">
                                <span>Total Advices</span>
                                <h2 class="mb-0">@Model.AdvicesRequests.TotalAdvices</h2>
                            </div>
                            <div class="small-box">
                                <i class="fas fa-file-signature"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 xl-50 d-none">
                <div class="card order-graph sales-carousel">
                    <div class="card-header">
                        <h6>Registrations Last Week</h6>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-7">
                                <div class="small-chartjs">
                                    <div class="flot-chart-placeholder" id="simple-line-chart-sparkline-3"></div>
                                </div>
                            </div>
                            <div class="col-5 text-right">
                                <div class="value-graph">
                                    <h4>42% <span><i class="fa fa-angle-up font-primary"></i></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media">
                            <div class="media-body">
                                <span>Total Registrations</span>
                                <h2 class="mb-0">9054</h2>
                                <p>
                                    <span><i class="fas fa-user"></i></span> 35%
                                    <span class="ml-3"><i class="fas fa-user-md"></i></span> 65%
                                </p>
                            </div>
                            <div class="small-box">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 xl-50 d-none">
                <div class="card order-graph sales-carousel">
                    <div class="card-header">
                        <h6>Registrations Last Week</h6>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-7">
                                <div class="small-chartjs">
                                    <div class="flot-chart-placeholder" id="simple-line-chart-sparkline-4"></div>
                                </div>
                            </div>
                            <div class="col-5 text-right">
                                <div class="value-graph">
                                    <h4>42% <span><i class="fa fa-angle-up font-primary"></i></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media">
                            <div class="media-body">
                                <span>Total Registrations</span>
                                <h2 class="mb-0">9054</h2>
                                <p>
                                    <span><i class="fas fa-user"></i></span> 35%
                                    <span class="ml-3"><i class="fas fa-user-md"></i></span> 65%
                                </p>
                            </div>
                            <div class="small-box">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->


@section Scripts {
    <script>
        $("#simple-line-chart-sparkline-1")
            .sparkline(
                [@Model.RegistrationsRequests!.RegistrationCountArray[0],
                @Model.RegistrationsRequests!.RegistrationCountArray[1],
                @Model.RegistrationsRequests!.RegistrationCountArray[2],
                @Model.RegistrationsRequests!.RegistrationCountArray[3],
                @Model.RegistrationsRequests!.RegistrationCountArray[4],
                @Model.RegistrationsRequests!.RegistrationCountArray[5],
                @Model.RegistrationsRequests!.RegistrationCountArray[6]],
                {
            type: 'line',
            width: '100%',
            height: '100%',
            tooltipClassname: 'chart-sparkline',
            lineColor: '#ff8084',
            fillColor: 'transparent',
            highlightLineColor: "#ff8084",
            highlightSpotColor: false,
            targetColor: "#ff8084",
            performanceColor: "#ff8084",
            boxFillColor: "#ff8084",
            medianColor: "#ff8084",
            minSpotColor: false,
            maxSpotColor: false,
            spotColor: false
        });
        $("#simple-line-chart-sparkline-2").sparkline(
            [@Model.AdvicesRequests!.AdvicesCountArray[0],
            @Model.AdvicesRequests!.AdvicesCountArray[1],
            @Model.AdvicesRequests!.AdvicesCountArray[2],
            @Model.AdvicesRequests!.AdvicesCountArray[3],
            @Model.AdvicesRequests!.AdvicesCountArray[4],
            @Model.AdvicesRequests!.AdvicesCountArray[5],
            @Model.AdvicesRequests!.AdvicesCountArray[6]],
            {
            type: 'line',
            width: '100%',
            height: '100%',
            tooltipClassname: 'chart-sparkline',
            lineColor: '#ffbc58',
            fillColor: 'transparent',
            highlightLineColor: "#ffbc58",
            highlightSpotColor: false,
            targetColor: "#ffbc58",
            performanceColor: "#ffbc58",
            boxFillColor: "#ffbc58",
            medianColor: "#ffbc58",
            minSpotColor: false,
            maxSpotColor: false,
            spotColor: false
        });
        $("#simple-line-chart-sparkline-3").sparkline([20, 5, 80, 10, 100, 15], {
            type: 'line',
            width: '100%',
            height: '100%',
            tooltipClassname: 'chart-sparkline',
            lineColor: '#ff8084',
            fillColor: 'transparent',
            highlightLineColor: "#ff8084",
            highlightSpotColor: false,
            targetColor: "#ff8084",
            performanceColor: "#ff8084",
            boxFillColor: "#ff8084",
            medianColor: "#ff8084",
            minSpotColor: false,
            maxSpotColor: false,
            spotColor: false
        });
        $("#simple-line-chart-sparkline-4").sparkline([85, 83, 90, 70, 85, 60, 65, 63, 68, 68, 65, 40, 60, 68, 75, 70, 90], {
            type: 'line',
            width: '100%',
            height: '100%',
            tooltipClassname: 'chart-sparkline',
            lineColor: '#02cccd',
            fillColor: 'transparent',
            highlightLineColor: "#02cccd",
            highlightSpotColor: false,
            targetColor: "#02cccd",
            performanceColor: "#02cccd",
            boxFillColor: "#02cccd",
            medianColor: "#02cccd",
            minSpotColor: false,
            maxSpotColor: false,
            spotColor: false
        });
    </script>
}