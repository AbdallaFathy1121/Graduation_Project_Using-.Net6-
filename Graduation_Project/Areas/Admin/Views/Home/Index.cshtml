@model RegistrationRequestsVM

@{
    ViewData["Title"] = "Home";
    string registrationsAverage = string.Format("{0:0.##}", Model.Average);
    string doctorAverage = string.Format("{0:0.##}", ViewBag.DoctorAverage);
    string patientAverage = string.Format("{0:0.##}", ViewBag.PatientAverage);
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<div class="content cards">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-4 col-md-6 xl-50">
                <div class="card order-graph sales-carousel">
                    <div class="card-header">
                        <h6>Registrations Last Week</h6>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-7">
                                <div class="small-chartjs">
                                    <div class="flot-chart-placeholder" id="simple-line-chart-sparkline-1"></div>
                                </div>
                            </div>
                            <div class="col-5 text-right">
                                <div class="value-graph">
                                    <h4>@registrationsAverage% <span><i class="fa fa-angle-up font-primary"></i></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="media">
                            <div class="media-body">
                                <span>Total Registrations</span>
                                <h2 class="mb-0">@ViewBag.TotalRegistrations</h2>
                                <p>
                                    <span><i class="fas fa-user"></i></span> @patientAverage%
                                    <span class="ml-3"><i class="fas fa-user-md"></i></span> @doctorAverage%
                                </p> 
                            </div>
