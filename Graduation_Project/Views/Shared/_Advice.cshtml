@model AdviceVM

<div class="pq-blog pq-blog-col-1">
    <div class="row">
        <div class="col-lg-12">
            <div class="pq-blog-post">
                <a href="adviceDetails.html">
                    <div class="pq-post-media">
                        <img loading="lazy" src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" class="img-fluid" alt="">
                        <div class="pq-post-date">
                            <a> <span>@Model.CreationDateTime.ToString()</span></a>
                        </div>
                    </div>  
                </a>
                <div class="pq-blog-contain">
                    <div class="pq-post-meta">
                        <ul class="d-flex align-items-center justify-content-between">
                            <li class="pq-post-author">
                                <a href="doctor.html">
                                    <div class="d-flex align-items-center">
                                        <div class="doctorImage">
                                            <img src="data:image/*;base64,@(Convert.ToBase64String(ViewBag.UserPhoto))" class="w-100 h-100" alt="">
                                        </div>
                                        <div class="name">@ViewBag.UserName</div>
                                    </div>
                                </a>
                            </li>
                            <li class="pq-post-comment">
                                <a>
                                    <i class="fa fa-comments"></i>
                                    2 Comments
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="pq-post-meta">
                        <ul class="d-flex align-items-center justify-content-between">
                            <li class="pq-post-author">
                                <i class="fas fa-stethoscope"></i>
                                @Model.DiseaseTypeName_EN
                            </li>
                            <li class="pq-post-comment">
                                <i class="fas fa-disease"></i>
                                @Model.DiseaseName_EN
                            </li>
                        </ul>
                    </div>
                    <h5 class="pq-blog-title">
                        <a href="adviceDetails.html">
                            @Model.Title.Substring(0, 20)....
                        </a>
                    </h5>
                    <div class="pq-blog-info">
                        <p>
                            @Model.Content.Substring(0, 100)....
                        </p>
                    </div>
                    <a href="get-the-exercise-limited-mobility.html"
                        class="pq-button pq-button-flat">
                        <div class="pq-button-block">
                            <span class="pq-button-text">Read More</span>
                            <i class="ion ion-plus-round"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
